<h1>Add New Part</h1>
<form action='' method='post'>
    {{#if error}}
        <p class='error'>All fields are required.</p>
    {{/if}}
    <label for='name'>Name:
        <input {{#if error.name}}class="border-red"{{/if}} name='name' type='text' value='{{name}}' />
    </label>
    <label for='description'>Description:
        <input {{#if error.description}}class="border-red"{{/if}} name='description' type='text' value='{{description}}' />
    </label>
    <label for='price'>Price:
        <input {{#if error.price}}class="border-red"{{/if}} name='price' type='number' step="0.01" value='{{price}}' />
    </label>
    <input type='submit' value='Create' />
</form>