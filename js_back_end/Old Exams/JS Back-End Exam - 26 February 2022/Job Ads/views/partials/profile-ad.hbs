<article class='profile-ads-card'>
    <article class='profile-ads-card-image'>
        <img src='/static/img/kindpng_776382.png' alt='job-icon' />
    </article>

    <article class='profile-ads-card-content'>
        <h2>{{headline}}</h2>
        <h3>Company Name: {{companyName}}</h3>
        <article class='all-ads-card-content-item'>
            <img src='/static/img/map-icon.png' />
            <p>Location: {{location}}</p>
        </article>
    </article>

    <article class='all-ads-card-buttons'>
        <a href='/details/{{_id}}' class='btn-details'>Details</a>
    </article>
</article>