<main class='search'>
    <!-- Search Page (Only for logged-in users) -->
    <section id='search'>
        <h2>Search by Name</h2>

        <form class='search-wrapper cf' method='get'>
            <input id='#search-input' type='text' name='name' placeholder='Search here...' {{#if data.search}}value="{{data.search}}"{{/if}} required />
            <button type='submit'>Search</button>
        </form>

        <div id='search-container'>
            {{#if stones}}
                <ul class='card-wrapper'>
                    {{#each stones}}
                    {{>stone-dash}}
                    {{/each}}
                </ul>
            {{else}}
                <div id="no-post">
                    <h2>There are no results found.</h2>
                </div>
            {{/if}}

        </div>
    </section>
</main>